<Page x:Class="Языковая_школа.PagesAdmin.PageActivated"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Языковая_школа.PagesAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Вход для администратора">

    <Grid>
        <Button x:Name="Back" Click="Back_Click" Style="{StaticResource ButtonchikAdminDelete}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Content="Назад" FontSize="20"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите код" FontSize="20" Margin="5" FontFamily="Comic Sans MS"/>
            <PasswordBox Margin="5" Name="Cod" Height="25"/>
            <Button Name="Confirm" Content="Подтвердить" Style="{StaticResource Buttonchik}" Width="120" Margin="5" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Page>
