<Page x:Class="Языковая_школа.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Языковая_школа.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="30" Width="100" Content="Гость" Margin="5" Style="{StaticResource Buttonchik}" Name="Guest" Click="Guest_Click"/>
            <Button Height="30" Width="100" Content="Администратор"  Margin="5" Style="{StaticResource Buttonchik}" Name="Admin" Click="Admin_Click"/>
        </StackPanel>
    </Grid>
</Page>
